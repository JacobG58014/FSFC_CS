public static void main(String args[]){
	print = ("Hello! My name is Keith!");
	print(print);

	for(;;){
		print = ("Enter a program");
		print(print);
		Scanner sc = new Scanner(System.in);
		program = sc.next();
		
		if(program.equalsIgnoreCase("Jacob")){
			Jacob();
		}
		else if(program.equalsIgnoreCase("exit")){
			Exit();
		}
		else if(program.equalsIgnoreCase("array")){
			Array();
		}
		else if (program.equalsIgnoreCase("Michael")){
		Michael();
	}
		else if (program.equalsIgnoreCase("Password")){
			Password();
		}
		print = ("---------------");
		print(print);
	}
	
	
}
private static void Password() {
	int tries = 0;
	String fullName;
	boolean entered = false;
	String firstName=JOptionPane.showInputDialog("First Name","Enter First Name");
	String lastName=JOptionPane.showInputDialog("Last Name","Enter Last Name");
	String password= JOptionPane.showInputDialog("Password","Enter Password");
	String realPass = "jacob";
	fullName = firstName + " " + lastName;
	//String anotherFirstName= firstName;
	
	System.out.println(fullName);
	//System.out.println(firstName.equals(lastName));
	//System.out.println(firstName.equals(anotherFirstName));
	
	if (password.equals(realPass)){
		
		entered(fullName);
	}
	
	else{
		tries = tries + 1;
		
		while (tries < 5){
			
				System.out.println("Password Incorrect");
				tries = tries+1;
				password= JOptionPane.showInputDialog("Try again, Attempt: " + tries,"Enter Password");
				if (password.equals(realPass)){
					
					entered(fullName);
				}
		}
		
		if (password.equals(realPass)){}
		else{
		System.out.println("Max number of tries reached");
		System.out.println("System Exiting");
		System.exit(0);
		}
	}
}

private static void Michael() {
