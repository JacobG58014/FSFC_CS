	print = ("Who are you?");
	print(print);
	Scanner name = new Scanner(System.in);
	pass = name.next();
	
	if(pass.equalsIgnoreCase( "Jacob")){
		print = ("Ahh, Hello again!");
		print(print);
	}
	else if(pass.equalsIgnoreCase( "Michael")){
		print = ("We dont serve your kind here...");
		print(print);
		Exit();
	}
	for(;;){
		print = ("Enter a program");
		print(print);
		Scanner sc = new Scanner(System.in);
		program = sc.next();
		
		if(program.equalsIgnoreCase("Jacob")){
			Jacob();
		}
		else if(program.equalsIgnoreCase("exit")){
			Exit();
		}
		else if(program.equalsIgnoreCase("array")){
			Array();
		}
		else if (program.equalsIgnoreCase("Michael")){
		Michael();
	}
		else if (program.equalsIgnoreCase("Password")){
			Password();
		}
		else if(program.equalsIgnoreCase("help")){
			help();
		}
		print = ("---------------");
		print(print);
	}
	
	
}
