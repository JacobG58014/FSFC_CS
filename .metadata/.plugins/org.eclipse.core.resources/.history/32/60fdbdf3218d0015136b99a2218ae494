package Application;

public class BubbleSort {
	public static void main (String args []){
	long start= 	System.currentTimeMillis();
		System.out.println("Bubble Sort");
		
		int[] x = new int[10];

		for (int i=0; i < x.length; i++ ){
			x[i] = (int) (1+ Math.random() * 10);
		}
		printArray(x, start);
		}
		
		public static void printArray(int[] x, long start){
		//Random array 1
		for (int i = 0; i < x.length; i++){
			System.out.print(x[i] + " ");
		}
		System.out.println("");
		int tempVal=0;
		//bubble sort
		for(int i=0;i<x.length-1;++i){
		
		for(int j=0;j<x.length-1;++j){
		if(x[j]>x[j+1]){
		tempVal = x[j];
		x[j]=x[j+1];
		x[j+1]=tempVal;
		}
		}
		}
		
		for(int i=0; i<x.length; ++i){
		System.out.print((x[i] + " "));
		}
		long end= 	System.currentTimeMillis();
		long xVal = end-start;
		System.out.println("Time taken = " + xVal);
		
		
		//Random array 2
		start= 	System.currentTimeMillis();
		System.out.println("");
		int[] y = new int[10];

		for (int i=0; i < y.length; i++ ){
			y[i] = (int) (1+ Math.random() * 10);
		}
		System.out.println("");
		System.out.println("Insertion Sort");
		printArray2(y, start);
		//Insertion sort
		int tempVal2 = 0;
		int currentPos=1;
		
		for(currentPos=1; currentPos<y.length; ++currentPos){
			while (currentPos>0 && y[currentPos]<y [currentPos - 1]){
			tempVal2=y[currentPos];
			y[currentPos]=y[currentPos-1];
			y[currentPos-1]=tempVal2;
			--currentPos;
			
			}
		} 
			for(int i=0; i<y.length;++i){
			System.out.print(y[i]+ " ");
		}
			end= 	System.currentTimeMillis();
		  xVal = end-start;
		System.out.println("Time taken = " + xVal);
			}
		
		public static void printArray2(int[] y, long start){
		
		for (int i = 0; i < y.length; i++){
			System.out.print(y[i] + " ");
		}
		System.out.println("");
		
		}
		
		 
}
	
