public static void main(String args[]){
	print = ("Hello! My name is Keith!");
	print(print);

	for(;;){
		print = ("Enter a program");
		print(print);
		Scanner sc = new Scanner(System.in);
		program = sc.next();
		
		if(program.equalsIgnoreCase("Jacob")){
			Jacob();
		}
		else if(program.equalsIgnoreCase("exit")){
			Exit();
		}
		else if(program.equalsIgnoreCase("array")){
			Array();
		}
		else if (program.equalsIgnoreCase("Michael")){
		Michael();
	}
		else if (program.equalsIgnoreCase("Password")){
			Password();
		}
		print = ("---------------");
		print(print);
	}
	
	
}
private static void Password() {
	while (yes == false){
	print = ("Enter Password: ");
	print(print);
	Scanner sc = new Scanner (System.in);
	pass = sc.next();
	if (pass.equals("KEITH")){
		JFrame frame = new JFrame();
		frame.setSize(200,200);
		 
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
		yes = true;
		
	}
	else{
		
	}
	}
}

