package Main;

import java.util.Scanner;

public class Keith {
	static String program;
	static int array;
	static String print;
	static String yn;
public static void main(String args[]){
	

	for(;;){
		System.out.println("Enter a program");
		Scanner sc = new Scanner(System.in);
		program = sc.next();
		
		if(program.equalsIgnoreCase("Jacob")){
			Jacob();
		}
		else if(program.equalsIgnoreCase("exit")){
			Exit();
		}
		else if(program.equalsIgnoreCase("array")){
			Array();
		}
		print = ("");
		print(print);
	}
	
}
private static void Array() {
	print = ("How big do you want your array?");
	print(print);
	Scanner sc = new Scanner(System.in);
	array = sc.nextInt();
	int[] x = new int[array];

	for (int i=0; i < x.length; i++ ){
		x[i] = (int) (1+ Math.random() * 10);
	}
	printArray(x);
	}

	public static void printArray(int[] x){
		print = ("array is: ");
		print(print);
		for (int i = 0; i < x.length; i++){
	System.out.print(x[i] + " ");
		}

		print = ("Do you want to order the array?");
		print(print);
		Scanner sc = new Scanner(System.in);
		yn = sc.next();
		if(yn.equalsIgnoreCase("Yes")){
			int tempVal=0;
			//the outer for loop manages the passes (4 in this case)
			for(int i=0;i<x.length-1;++i){
			//the inner loop does the swapping
			for(int j=0;j<x.length-1;++j){
			if(x[j]>x[j+1]){
			tempVal = x[j];
			x[j]=x[j+1];
			x[j+1]=tempVal;
			}
			}
			}
			//let’s print the sorted array
			for(int i=0; i<x.length; ++i){
			System.out.print((x[i] + " "));
			}
			}
		else if(yn.equalsIgnoreCase("No")){
			print = ("okay then...");
			print(print);
		}
		else{
			print = ("Not Acceptable!!");
			print(print);
		}


}
private static void Exit() {
	print = ("Bye Bye!");
	print(print);
	System.exit(0);	
}
public static void Jacob(){
		print = ("Is awesome");
		print(print);
	}

public static void print(String print){
	 System.out.println("** " + print + " **");
}
}
